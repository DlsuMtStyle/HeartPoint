<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_margin="8dp"
app:cardCornerRadius="8dp"
app:cardElevation="4dp">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="返回                               ❤️ 10"
        android:textSize="16sp"
        android:backgroundTint="#FFFFFF"
        android:textColor="#484274"
        android:gravity="start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 商店圖片 -->
    <ImageView
        android:id="@+id/img_product"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cafe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_back" />

    <!-- 標題 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="7-11大冰美限時兌換"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_product" />

    <!-- 兌換時間 -->
    <TextView
        android:id="@+id/tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="兌換時間：2024-12-01 ~ 2025-02-01\n兌換地點：7-Eleven"
        android:textColor="#666666"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <!-- 數量選擇 -->
    <LinearLayout
        android:id="@+id/quantity_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:background="#F0F0F0"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 數量文字 -->
        <TextView
            android:id="@+id/tv_label_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="數量"
            android:textSize="20sp"
            android:textColor="#333333"
            android:layout_marginEnd="60dp" />

        <!-- 減號按鈕 -->
        <Button
            android:id="@+id/btn_decrease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#BDBDBD"/>

        <!-- 數量顯示 -->
        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="1"
            android:textSize="20sp"
            android:textColor="#333333"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp" />

        <!-- 加號按鈕 -->
        <Button
            android:id="@+id/btn_increase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginStart="16dp"
            android:backgroundTint="#BDBDBD"/>
    </LinearLayout>


    <!-- 這裡是分隔線 -->
    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#D3D3D3"
        app:layout_constraintTop_toBottomOf="@id/quantity_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 愛心符號和數量 -->
    <TextView
        android:id="@+id/tv_store_love_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="❤️ 10"
        android:textColor="#FF4081"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@id/tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp" />

    <!-- 注意事項 -->
    <TextView
        android:id="@+id/tv_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注意事項：\n1. 兌換後兌換碼不得退還。"
        android:textSize="14sp"
        android:textColor="#666666"
        android:gravity="left"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 兌換按鈕 -->
    <Button
        android:id="@+id/btn_redeem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="進行兌換"
        android:textSize="16sp"
        android:backgroundTint="#484274"
        android:textColor="#FFFFFF"
        android:layout_marginTop="170dp"
        app:layout_constraintTop_toBottomOf="@id/tv_note"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
