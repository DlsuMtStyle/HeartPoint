<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp">

        <!-- 返回按鈕和愛心 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/back_and_love_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- 返回按鈕 -->
            <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:textSize="16sp"
                android:backgroundTint="#FFFFFF"
                android:textColor="#484274"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- 愛心和數字 (水平置中) -->
            <LinearLayout
                android:id="@+id/center_love_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <!-- 愛心圖片 -->
                <ImageView
                    android:id="@+id/img_heart_center"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/heart"
                    android:layout_marginEnd="4dp" />

                <!-- 愛心數量 -->
                <TextView
                    android:id="@+id/tv_store_love_count_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textColor="#800080"
                    android:textSize="16sp" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 商店圖片 -->
        <ImageView
            android:id="@+id/img_product"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/drinks"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/back_and_love_layout" />

        <!-- 標題 -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="7-11大冰美限時兌換"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_product" />

        <!-- 愛心和數字 (右側，與tv_title水平) -->
        <LinearLayout
            android:id="@+id/right_love_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/tv_title"
            app:layout_constraintBottom_toBottomOf="@id/tv_title"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 愛心圖片 -->
            <ImageView
                android:id="@+id/img_heart_right"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/heart"
                android:layout_marginEnd="4dp" />

            <!-- 愛心數量 -->
            <TextView
                android:id="@+id/tv_store_love_count_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="#800080"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- 兌換時間 -->
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="兌換時間：2024-12-01 ~ 2025-02-01\n兌換地點：7-Eleven"
            android:textColor="#666666"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <!-- 數量選擇 -->
        <LinearLayout
            android:id="@+id/quantity_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:background="#F0F0F0"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 數量文字 -->
            <TextView
                android:id="@+id/tv_label_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="數量"
                android:textSize="20sp"
                android:textColor="#333333"
                android:layout_marginEnd="60dp" />

            <!-- 減號按鈕 -->
            <Button
                android:id="@+id/btn_decrease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="#BDBDBD"/>

            <!-- 數量顯示 -->
            <TextView
                android:id="@+id/tv_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1"
                android:textSize="20sp"
                android:textColor="#333333"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp" />

            <!-- 加號按鈕 -->
            <Button
                android:id="@+id/btn_increase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginStart="16dp"
                android:backgroundTint="#BDBDBD"/>
        </LinearLayout>

        <!-- 分隔線 -->
        <View
            android:id="@+id/line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="#D3D3D3"
            app:layout_constraintTop_toBottomOf="@id/quantity_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 注意事項 -->
        <TextView
            android:id="@+id/tv_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="注意事項：\n1. 兌換後兌換碼不得退還。"
            android:textSize="14sp"
            android:textColor="#666666"
            android:gravity="left"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 兌換按鈕 -->
        <Button
            android:id="@+id/btn_redeem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="進行兌換"
            android:textSize="16sp"
            android:backgroundTint="#484274"
            android:textColor="#FFFFFF"
            android:layout_marginTop="170dp"
            app:layout_constraintTop_toBottomOf="@id/tv_note"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
